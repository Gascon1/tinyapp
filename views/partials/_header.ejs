<header>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color:darkorange">
    <a class="navbar-brand" href="/urls" style="font-weight:bold;font-size:22px;"><span
        style="font-weight:normal;font-size:16px;">tiny</span>App</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav" style="justify-content: end;">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>


    <% if (!user) { %>
    <div class="navbar-nav" style="margin: 0.3em 0.6em">
      <form class="form-inline" action="/login" method="GET">
        <button type="submit" class="btn btn-outline-light">Sign In</button>
      </form>
    </div>
    <div class="navbar-nav " style="margin: 0.3em 0em 0.3em 0.6em">
      <form class="form-inline" action="/register" method="GET">
        <button type="submit" class="btn btn-outline-light">Register</button>
      </form>
    </div>
    </div>

    <% } else { %>
    <div>
      <form class="form-inline" action="/logout" method="POST">
        <span class="navbar-text" style="margin: 0.15em 0.4em;color: white;font-size: large;">Hey,
          <%= user.name%></span>
        <button type="submit" class="btn btn-outline-light" style="margin: 0.3em 0em 0.3em 0.6em">Sign Out</button>
        <% } %>
      </form>
    </div>
  </nav>
</header>